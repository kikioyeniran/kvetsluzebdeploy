                                //- .form-select
                                //-     label.form-label(for='country') Country
                                //-     select#country(name='country')
                                //-         option(value='') Country
                                //-         option(value='Australia') Australia
                                //-         option(value='USA') America
                                hr
                                .form-textarea
                                    label.form-label(for='priority') Where should your cleaner prioritise?
                                    textarea#priority(name='priority' placeholder='Example, kitchen, inside-oven...') #{form.priority}
                                .fieldset-footer
                                span Step 2 of 3
                        h3
                            span.title_text Timing and Address
                        fieldset
                            .fieldset-content
                                .form-radio
                                    label(for='access_type') How will the Cleaner access the apartment?
                                    .form-radio-flex
                                        input#spare_key(type='radio' name='access_type' value='spare_key' checked='checked')
                                        label(for='spare_key')
                                            | Spare Key
                                        input#someone_home(type='radio' name='access_type' value='someone_home')
                                        label(for='someone_home')

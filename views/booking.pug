extends layout

block content
    .body2
        .main
            .container2
                h2 Book A Cleaner
                .container
                    if errors
                        each error, i in errors
                            #messages(class="alert alert-danger") #{error.msg}
                form#signup-form.signup-form(method='POST', action='/client/booking', enctype="multipart/form-data")
                    if form != null
                        h3
                            span.title_text Account Infomation
                        fieldset
                            .fieldset-content
                                //- .form-group
                                    label.form-label(for='username') Username
                                    input#username(type='text' name='username' placeholder='User Name')
                                .form-group
                                    label.form-label(for='email') Email
                                    input#email(type='email' name='email' placeholder='Your Email' value=form.email)
                                .form-group.form-password
                                    label.form-label(for='password') Password
                                    input#password(type='password' name='password' data-indicator='pwindicator' value=form.password)
                                    #pwindicator
                                        .bar-strength
                                            .bar-process
                                                .bar
                                        .label
                                .form-group.form-password
                                    label.form-label(for='password2') Confirm Password
                                    input#password2(type='password' name='password2' data-indicator='pwindicator' value=form.password2)
                                    #pwindicator
                                        .bar-strength
                                            .bar-process
                                                .bar
                                        .label
                            .fieldset-footer
                                    span Step 1 of 3
                        h3
                            span.title_text Customise your Clean
                        fieldset
                            .fieldset-content
                                .form-group
                                    label.form-label(for='post_code') Enter Your Post Code
                                    input#fullName(type='text' name='postcode' placeholder='Post Code' value=form.postcode)
                                hr
                                .form-group
                                    label.form-label(for='bedrooms') How many bedrooms?
                                    input#bedrooms(type='number' name='bedrooms' placeholder='1' min='0' max='10' value=form.bedrooms)
                                hr
                                .form-group
                                    label.form-label(for='bathrooms') How many bathrooms?
                                    input#bedrooms(type='number' name='bathrooms' placeholder='1' min='0' max='10' value=form.bathrooms)
                                hr
                                .form-group
                                    label.form-label(for='extraTasks') Extra Tasks?
                                    select#keep-order(multiple="multiple" name="extraTasks")
                                        option(value="ironing") Ironing
                                        option(value="windows") Windows
                                        option(value="inside_oven") Inside Oven
                                        option(value="laundry") Laundry
                                        option(value="inside_fridge") Inside Fridge
                                hr
                                .form-radio
                                    label.form-label(for='hours') Number of hours for cleaning
                                    .form-radio-item
                                        input#two(type='radio' name='hours' value='2.0' checked='checked')
                                        label(for='two') 2.0
                                        input#twoplus(type='radio' name='hours' value='2.5')
                                        label(for='twoplus') 2.5
                                        input#three(type='radio' name='hours' value='3.0')
                                        label(for='three') 3.0
                                        input#threeplus(type='radio' name='hours' value='3.5')
                                        label(for='threeplus') 3.5
                                        input#more(type='radio' name='hours' value='more')
                                        label(for='more') More
                                #textboxes.form-radio
                                    label.form-label(for='more_hours') Select the number of hours
                                    .form-radio-item
                                        input#four(type='radio' name='more_hours' value='4.0' checked='checked')
                                        label(for='four') 4.0
                                        input#fourplus(type='radio' name='more_hours' value='4.5')
                                        label(for='fourplus') 4.5
                                        input#five(type='radio' name='more_hours' value='5.0')
                                        label(for='five') 5.0

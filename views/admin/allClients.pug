extends layout

block content
    #card-1.row.mt-2
      each client, i in clientDetails
        .col-sm-6.col-md-4.col-lg-3
          .card.card-inverse.card-info
            img.card-img-top(src="/uploads/"+client.profilePic)
            .card-block
              h4.card-title #{client.fullName}
            .card-footer
              small
              a.btn.btn-info.float-left.btn-sm(href="/admin/dashboard/singleclient/"+encodeURIComponent(admin._id)+"/"+encodeURIComponent(client.clientID)) View Details
              a.delete-client.float-right.delete-icon(href='#', data-id=client.clientID, data-id2=admin._id)
                i.fa.fa-trash-o

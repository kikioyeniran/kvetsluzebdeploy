extends layout

block content
        #card-1.row.mt-2
            .col-sm-6.col-md-4.col-lg-5
                .card.card-inverse.card-info
                    img.card-img-top(src="/uploads/"+cleanerDetails.profilePic)
                    .card-block
                        h4.card-title #{cleanerDetails.fullName}
                    .card-block
                        h4.card-title #{cleanerDetails.email}
                    .card-block
                        h4.card-title Cleaner Account Details
                        hr
                        h6.card-line
                            strong Account Name :
                            |  #{cleanerAcct.acctName}
                        hr
                        h6.card-line
                            strong IBAN :
                            |  #{cleanerAcct.ibanNumber}
                        hr
                        h6.card-line
                            strong Total Income :
                            |  #{cleanerAcct.totalIncome}
                        hr
                        h6.card-line
                            strong Income Per Hour :
                            | &euro; #{cleanerAcct.cleanerIncome}
                    .card-footer
                        small Last updated #{cleanerDetails.updated}
                        //- button.btn.btn-info.float-right.btn-sm View Details
            .col-sm-6.col-md-4.col-lg-7
                .card.card-inverse.card-info
                    //- img.card-img-top(src="/admin/img/card/c-3.jpg")
                    .card-block
                        h5.card-title Additional Information
                    hr
                    h6.card-line
                        strong Postcode :
                        |  #{cleanerDetails.postcode}
                    hr
                    h6.card-line
                        strong Extra Tasks:
                        | #{cleanerDetails.extraTasks}
                    hr
                    h6.card-line
                        strong Date of First Clean:
                        | #{cleanerDetails.dateFirstClean}
                    hr
                    h6.card-line
                        strong Experience:
                        | #{cleanerDetails.experience} year(s)
                    hr
                    h6.card-line
                        strong Customer Rating:
                        | #{cleanerDetails.rating}
                    hr
                    h6.card-line
                        strong Profile:
                        | #{cleanerDetails.profile}
                    hr
                    h6.card-line
                        strong Address:
                        | #{cleanerDetails.address}
                    hr
                    h6.card-line
                        strong City:
                    //-     | #{cleanerDetails.city}
                    //- hr
                    //- h6.card-line
                    //-     strong Income:
                    //-     | &euro; #{cleanerDetails.income}
                    hr
                    h6.card-line
                        strong National ID:
                        a(href="/uploads/"+cleanerDetails.nationalID target="_blank")  View
                    hr
                    h6.card-line
                        strong Health Insurance :
                        a(href="/uploads/"+cleanerDetails.healthInsurance target="_blank")  View

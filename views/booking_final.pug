extends layout

block content
    .body2
        .main
            .row
                .header-text
                    | SELECT ANY THREE CLEANERS
            .row
                .contains.col-lg-2.selected-group
                    h5.card-header Selected Cleaners
                    #card-bod.card-body
                        ul#items.list-inline
                        form#requestForm(method="POST", action="/requests/booking_final")
                            input(type='hidden' name='clientID' value=client.clientID)
                            input(type='hidden' name='clientName' value=clientDetails.fullName)
                            input(type='hidden' name='clientPhone' value=clientDetails.mobileNumber)
                            input(type='hidden' name='clientEmail' value=client.email)
                            input(type='hidden' name='extraTasks' value=clientDetails.extraTasks)
                            input(type='hidden' name='hours' value=clientDetails.cleaningHours)
                            input(type='hidden' name='moreHours' value=clientDetails.moreCleaningHours)
                            input(type='hidden' name='address' value=clientDetails.address)
                            input(type='hidden' name='city' value=clientDetails.city)
                            input(type='hidden' name='country' value=clientDetails.country)
                            input(type='hidden' name='postcode' value=clientDetails.postcode)
                            input(type='hidden' name='priority' value=clientDetails.priority)
                            input(type='hidden' name='accessType' value=clientDetails.apartmentAccess)
                            input(type='hidden' name='keyHiddenPin' value=clientDetails.keyHiddenPin)
                            input(type='hidden' name='keySafePin' value=clientDetails.keySafePin)
                            input(type='hidden' name='frequency' value=clientDetails.cleaningFrequency)
                            input(type='hidden' name='dateFirstClean' value=clientDetails.dateFirstClean)
                        //- button.btn.btn-primary.btn-sm.select(role="button" type="submit") Select
                .contains.col-lg-10
                    if cleanerDetails
                        #card-3.row.mt-2
                            each cleaner, i in cleanerDetails
                                .col-sm-6.col-md-3
                                    .panel.panel-default.panel-card
                                        .panel-heading
                                            img(src="/img/image-1.jpg")
                                            button.btn.btn-primary.btn-sm.select(role="button" type="submit") Select
                                        .panel-figure
                                            img.img-fluid.rounded-circle(src="/uploads/"+cleaner.profilePic)
                                        .panel-body.text-center
                                            h4.panel-header
                                                .see
                                                    | #{cleaner.fullName}
                                                p.hide #{cleaner.cleanerID}
                                                p.hide #{cleaner.email}
                                                    //- | #{cleaner.cleanerID}
                                            small #{cleaner.profile}
                                        .panel-thumbnails
                                            .row
                                                .col-xs-4
                                                    .cleaner-rating
                                                        //- var n = 1;
                                                        //- while n <= cleaner.rating
                                                        i.fa.fa-fw.fa-star #{cleaner.rating}
                                                        //- i.fa.fa-fw.fa-star
                                                        //- i.fa.fa-fw.fa-star
                                                        //- i.fa.fa-fw.fa-star
                                                        //- i.fa.fa-fw.fa-star
                                                    .col-xs-4
                                                        .cleaner-price
                                                            | &euro;#{cleaner.income} per hour
                    else
                        i.large.fa.fa-window-restore  Sorry! no cleaner found in your area
                        a(href='/client/client_login')
                    br.mb-5

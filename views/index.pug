extends layout

block content
  section#home
    #carousel.carousel.slide.carousel-fade(data-ride='carousel')
      // Carousel items
      .carousel-inner
        .carousel-item.active.slides
          .overlay
          .slide-1
          .hero
            hgroup.wow.fadeInUp
              h1
                | We Clean
                span
                  a.typewrite(href='' data-period='2000' data-type='[ " Homes", " offices", " ANYWHERE!"]')
                    span.wrap
              h3 CONNECT TO THE MOST AFFORDABLE AND EXCEPTIONAL CLEANING SERVICES TODAY!
            a(href='/public/booking')
              button.btn.btn-general.btn-green.wow.fadeInUp(role='button') Book A Cleaner Now
  //
